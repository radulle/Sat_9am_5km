<% head_info :title, t('navbars.top.club_ratings') %>
<% head_info :description, t('.description') %>
<h2><%= t 'navbars.top.club_ratings' %></h2>

<p><%= t '.how_to_add_new_club_html', mail: ENV['INFO_EMAIL'] %></p>

<table class="table table-striped">
  <thead data-controller="table-head">
    <tr>
      <th>Название</th>
      <th>
        <span class="sort-arrow" data-action="click->table-head#toggleSort"><i class="bi bi-caret-up-fill"></i></span> участники
      </th>
      <th>
        <span class="sort-arrow" data-action="click->table-head#toggleSort"><i class="bi bi-caret-up"></i></span> результаты
      </th>
      <th class="hidden-on-phone">
        <span class="sort-arrow" data-action="click->table-head#toggleSort"><i class="bi bi-caret-up"></i></span> волонтёрства
      </th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <%= render partial: 'club', collection: @clubs %>
  </tbody>
</table>
