<% head_info :title, t('.confirmation_instructions.title') %>
<% head_info :description, t('.confirmation_instructions.description') %>
<h2><%= t '.confirmation_instructions.title' %></h2>

<%= form_for resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'row' }, data: { turbo: false } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="col-sm-12 col-lg-6 mb-3">
    <div class="input-group">
      <%=
        f.email_field(
          :email,
          autofocus: true,
          autocomplete: :email,
          inputmode: :email,
          value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
          class: 'form-control',
          placeholder: t('.your_email'),
        )
      %>
      <%= f.submit t('.send_confirmation'), class: 'btn btn-outline-secondary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
