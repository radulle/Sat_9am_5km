<% head_info :title, t('.description') %>
<% head_info :description, t('.description') %>
<h2><%= t '.title' %></h2>

<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'row' }, data: { turbo: false } do |f| %>
  <%= render 'devise/shared/error_messages', resource: resource %>
  <div class="col-sm-12 col-md-6 col-lg-4 mb-3">
    <div class="input-group">
      <%=
        f.email_field(
          :email,
          autofocus: true,
          autocomplete: :email,
          class: 'form-control',
          placeholder: t('.your_email'),
          inputmode: :email,
        )
      %>
      <%= f.submit t('.reset_password'), class: 'btn btn-outline-secondary' %>
    </div>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
