<tr data-male="<%= result.athlete&.male %>">
  <td class="position align-middle"><%= result.position %></td>
  <td>
    <% if result.athlete.present? %>
      <div>
        <%= link_to result.athlete&.name, result.athlete, class: 'athlete-link' %>
      </div>
      <div class="athlete-details fw-lighter">
        забегов <%= @results_count[result.athlete] %>
          <% if (volunteering_count = @volunteering_count_a[result.athlete]) %>
            <div class="vr"></div>
            волонтёрств&nbsp;<%= volunteering_count %>
          <% end %>
      </div>
    <% else %>
      <%= t '.nobody' %>
    <% end %>
  </td>
  <td class="align-middle"><%= human_result_time(result.total_time) %></td>
  <td class="align-middle"><%= human_result_pace(result.total_time) %></td>
  <td class="hidden-on-phone align-middle">
    <% club = result.athlete&.club %>
    <%= link_to club.name, club if club %>
  </td>
</tr>
